---
import L from "./Site.astro";
import JSHeader from "../components/JSHeader.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<L title={title}>
<JSHeader />
<div>
	<div class="container">
		<slot />
	</div>
</div>
</L>

<style is:global>
	* {
		box-sizing: border-box;
	}
	html {
		font-family: system-ui, sans-serif;
		overflow-y: scroll;
		overflow-x: hidden;
		--logoBg: linear-gradient(45deg, teal, midnightblue);
	}
	body {
		margin: 0;
		min-height: 100vh;
	}
	header {
	}
	.container {
		padding: 2rem;
		margin: 0 auto;
		max-width: 640px;
	}
</style>
