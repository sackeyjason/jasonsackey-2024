---
import Layout from "../../layouts/Layout.astro";
const allPosts = await Astro.glob("./*.md");
allPosts.reverse();
const postList = allPosts.map((post) => {
    return {
        url: post.url,
        title: post.frontmatter.title,
        date: post.frontmatter.date,
    };
});
---

<Layout title="Blog">
    <h1>Blog</h1>
    
    <ul>
        {
            postList.map((post) => (
                <li>
                    <a href={post.url}>
                        {post.title} - {post.date}
                    </a>
                </li>
            ))
        }
    </ul>
</Layout>

<style>
    ul {
        padding: 0;
        display: grid;
        gap: 0.5rem;
    }
</style>
