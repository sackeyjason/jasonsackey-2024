<style>
	body {
		margin: 0;
	}
	header {
		display: flex;
	}
	.selfie-wrapper {
		aspect-ratio: 1;
		width: 256px;
		height: 256px;
		position: relative;
		margin: -0.5rem -0.75rem;
	}
	.selfie {
		filter: brightness(1.4);
	}
	.selfie-wrapper:after {
		content: "";
		display: block;
		position: absolute;
		width: 100%;
		height: 100%;
		left: 0;
		top: 0;
		background: var(--color-primary);
		mix-blend-mode: color;
	}
	@media screen and (min-width: 800px) {
		.about-container {
			max-width: calc(100vw - calc(3rem + 280px))
		}
	}
	h1 {
		text-shadow: 4px 4px 0
			color-mix(in hsl, var(--color-primary), transparent 70%);
	}
	.socials-wrapper {
		align-self: flex-start;
		border: 1px solid var(--color-primary);
		border-left: none;
		border-right: none;
		padding: 1rem 0;
	}

	.container {
		margin: 0;
		padding: 1rem;
		max-width: 100%;
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}
	.panel {
		margin: 0.5rem 0;
		border: 1px dashed var(--color-primary);
	}
	.panel summary {
		padding: 0.5rem;
		border-bottom: 1px dashed
			color-mix(in hsl, var(--color-primary), transparent 50%);
	}
	.panel .details-content {
		padding: 0.5rem;
	}
	.games {
		margin: 1rem 0;
		padding: 0;
		display: grid;
		gap: 1rem;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
	}
	.games li {
		overflow: hidden;
		padding: 1rem;
		border: 1px solid;
		border-radius: 8px;
	}
	.games img {
		float: left;
		width: 128px;
		margin: 0 0.5rem 0.5rem 0;
	}
	.games li > :first-child {
		margin-top: 0;
	}
	.games li > :last-child {
		margin-bottom: 0;
	}
	footer {
		padding: 4rem 0;
		text-align: center;
		color: var(--color-secondary);
	}
</style>
